# Frontend Environment Variables

# Frontend base URL — use /api in dev to route through Vite proxy
VITE_API_URL=/api

# Backend URL used by Vite proxy to forward /api/* → backend
# Change this if your backend runs on a different host/port
VITE_BACKEND_URL=http://localhost:8010

# API Key for authentication (set if ENABLE_API_KEY_AUTH=true in backend .env)
VITE_API_KEY=

# Feature Flags
VITE_ENABLE_CHARTS=true
VITE_ENABLE_HISTORICAL_DATA=true
VITE_ENABLE_WATCHLIST=true
VITE_ENABLE_COMPARISON=true

# Chart Settings
VITE_DEFAULT_CHART_DAYS=180
VITE_MAX_COMPARISON_STOCKS=4

# UI Settings
VITE_ITEMS_PER_PAGE=20
VITE_DEFAULT_TOP_PICKS=10
