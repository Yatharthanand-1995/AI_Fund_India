# Frontend Environment Variables

# API URL (for production)
# In development, the proxy in vite.config.ts handles API requests
VITE_API_URL=http://localhost:8000

# Feature Flags
VITE_ENABLE_CHARTS=true
VITE_ENABLE_HISTORICAL_DATA=true
VITE_ENABLE_WATCHLIST=true
VITE_ENABLE_COMPARISON=true

# Chart Settings
VITE_DEFAULT_CHART_DAYS=180
VITE_MAX_COMPARISON_STOCKS=4

# UI Settings
VITE_ITEMS_PER_PAGE=20
VITE_DEFAULT_TOP_PICKS=10
